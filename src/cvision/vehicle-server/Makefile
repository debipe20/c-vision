# TransceiverDecoder Makefile 
BUILD_ROOT=$(HOME)/Desktop/deb-anl-xil
MAKE_ROOT :=$(BUILD_ROOT)/make
include $(MAKE_ROOT)/newheader.mk

# NEW: path to the Vehicle Status headers from deb-anl-xil repository
Vehicle_Status_Path = $(BUILD_ROOT)/src/driver-in-loop/vehicle-status-manager
vehicle_staus_INCL ?= $(HOME)/Desktop/deb-anl-xil/src/driver-in-loop/vehicle-status-manager

INCLUDES    := -I$(J2735_INCL) -I$(JSONCPP_INCL) -I$(COMMON_INCL) -I$(BUILD_ROOT)/3rdparty/ -I$(MAPENGINE_INCL) -I"$(vehicle_staus_INCL)" # tell the compiler where to find the include directories
#LDFLAGS     := -Wl,-rpath=$(J2735_SO_DIR) # tell the linker to add a path to the json shared lib 
#-Wl is used to pass the option(rpath) to the linker --- we probably want to move this into a default rather than a hard coded location
LIBS        := -L$(J2735_LIB) -L$(MMITSS_COMMON_LIB) -L$(MAPENGINE_LIB) -llocAware -ldsrc -lasn -lmmitss-common #tell the linker where to find the libraries

#cpp's go here
SRC += vehicle-server-main.cpp VehicleServer.cpp  $(Vehicle_Status_Path)/VehicleStatusManager.cpp $(Vehicle_Status_Path)/MapManager.cpp $(Vehicle_Status_Path)/SpatManager.cpp
#the name of the executable goes here
TARGET = M_VehicleServer

# list the .o's corresponding to .cpp's
# see: https://www.gnu.org/software/make/manual/html_node/Text-Functions.html
OBJECTS = $(patsubst %.cpp, %.o, $(SRC))

include $(MAKE_ROOT)/newrules.mk